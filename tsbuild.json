{
  "src": "./src/",
  "main": "index.ts",
  "tslint": "./tslint.json",
  "builds": [
    {
      "distFolder": "./dist/",
      "output": {
        "format": "cjs",
        "file": "index.js",
        "name": "ClusterWS"
      },
      "uglify": {
        "mangle": true,
        "output": {
          "beautify": true
        }
      },
      "copy": [
        {
          "src": "./LICENSE",
          "dist": "./dist/LICENSE"
        },
        {
          "src": "./src/index.d.ts",
          "dist": "./dist/index.d.ts"
        },
        {
          "src": "./.github/README.md",
          "dist": "./dist/README.md"
        },
        {
          "src": "./package.json",
          "dist": "./dist/package.json",
          "remove": [
            "devDependencies",
            "scripts"
          ]
        }
      ]
    },
    {
      "distFolder": "./dist/browser/",
      "output": {
        "format": "iife",
        "file": "clusterws.min.js",
        "name": "ClusterWS"
      },
      "uglify": {
        "mangle": true
      }
    },
    {
      "distFolder": "./dist/browser/",
      "output": {
        "format": "iife",
        "file": "clusterws.js",
        "name": "ClusterWS"
      }
    }
  ],
  "tsConfigs": {
    "compilerOptions": {
      "target": "es6",
      "module": "ES2015",
      "removeComments": true,
      "declaration": false
    },
    "exclude": [
      "./src/**/*.test.ts"
    ],
    "include": [
      "./src/**/*"
    ]
  }
}